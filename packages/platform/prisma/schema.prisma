// SQLite 环境配置模板
generator client {
  provider = "prisma-client-js"
	// 指定输出到源码目录，否则 prisma 会默认将 client 构建在 node_modules 中，不利于 docker 部署
	output   = "./generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model DifyApp {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // 应用基本信息
  name        String
  mode        String?
  description String?
  tags        String? // JSON 字符串存储数组

  // 应用状态：1-启用，2-禁用
  isEnabled Int? @default(1) @map("is_enabled")

  // 请求配置
  apiBase String @map("api_base")
  apiKey  String @map("api_key")

  // 回复表单配置
  enableAnswerForm     Boolean @default(false) @map("enable_answer_form")
  answerFormFeedbackText String? @map("answer_form_feedback_text")

  // 输入参数配置
  enableUpdateInputAfterStarts Boolean @default(false) @map("enable_update_input_after_starts")

  // 扩展配置
  openingStatementDisplayMode String? @map("opening_statement_display_mode") // 'default' | 'always'

  // 用户关联
  userId String? @map("user_id")
  user   User?   @relation(fields: [userId], references: [id])

  @@map("dify_apps")
}

// 用户表 - 用于后台管理员和前端用户
model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String   // 密码哈希
  role      String   @default("user") // admin | user
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // 用户拥有的应用
  apps DifyApp[]

  @@map("users")
}
