{
	"compilerOptions": {
		"lib": ["ES2021"],
		"module": "ESNext",
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"useDefineForClassFields": true,
		"composite": true,
		"rootDir": "src",
		"outDir": "dist"
	},
	"include": ["src"],
	"references": [
		{
			"path": "../core"
		},
		{
			"path": "../helpers"
		}
	]
}
